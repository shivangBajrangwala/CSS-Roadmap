  .flex-container {
    display: flex;
    gap: 1rem;
    counter-reset: my-counter; /* reset the counter at container start */
  }

  .flex-item {
    background: #444;
    color: white;
    padding: 1rem;
    border-radius: 5px;
    position: relative;
  }

  /* Add the counter before each item */
  .flex-item::after {
    counter-increment: lorem; /* increase the counter */
    content: counter(my-counter) ""; /* show the counter number */
    font-weight: bold;
    margin-right: 0.5rem;
  }
